<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:orientation="vertical"
    android:background="@color/light_gray_ssss"
    android:paddingLeft="@dimen/search_input_margin"
    android:paddingRight="@dimen/search_input_margin">

    <!-- 背景输入框 -->

    <RelativeLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="right|center_vertical"
            android:text="@string/cancel"
            android:textColor="@color/orange"
            android:textSize="@dimen/font_size_medium" />

        <!-- 真正的输入框 -->
        <EditText
            android:id="@+id/et_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:layout_toLeftOf="@id/tv_search_cancel"
            android:background="@android:color/transparent"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="@string/search_hint"
            android:maxLength="20"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/light_gray_s"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size_medium" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:src="@color/light_gray_ss" />

</LinearLayout>